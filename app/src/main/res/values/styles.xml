<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomText" parent="@android:style/TextAppearance.Large" >
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/tv_18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomSmallText" parent="@android:style/TextAppearance.Medium" >
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/tv_15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
